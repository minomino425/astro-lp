---
const { href, title, text } = Astro.props;
---

<article>
    <a href={href} class="card">
        <div class="card__body">
            <h3>{title}</h3>
            <p>{text}</p>
        </div>
    </a>
</article>

<style>
    .card {
        display: flex;
        flex-direction: column;
        color: inherit;
        text-decoration: none;
        border-radius: 2.5rem;
        background-color: #fff;
    }
</style>
